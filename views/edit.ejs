<%- include('./partials/header.ejs') %>
   <div class="row">
      <div class="col -6 m-auto">
        <h1>Edit page for <%= job.name %></h1>    
        <form action="/jobs/<%= job._id %>?_method=PATCH" method="post">
            <div class="mb-3">
              <label for="name" class="form-label">Enter Company Name</label>
              <input type="text" class="form-control" id="name" name="name" required value="<%=job.name%>">
            </div>
            <div class="mb-3 ">
                <label for="address" class="form-label">Enter Company Address</label>
                <input type="text" class="form-control" id="address" name="address" required value="<%=job.address%>">
              </div>
            <div class="mb-3 ">
              <label for="image" class="form-label">Add Company logo </label>
              <input type="text" class="form-control" id="image" name="image" required value="<%=job.image%>">
            </div>
            <div class="mb-3 ">
              <label for="package" class="form-label">Job-Stipend</label>
              <input type="string" class="form-control" id="package" name="package" required value="<%=job.package%>" >
          </div>
          <div class="mb-3 ">
              <label for="cgpa" class="form-label">Enter CGPA </label>
              <input type="number" class="form-control" id="cgpa" name="cgpa" required  minlength="0" maxlength="10" step="0.01" value="<%=job.cgpa%>">
          </div>
          <div class="mb-3 ">
              <label for="deadline" class="form-label">Job-Deadline </label>
              <input type="date" class="form-control" id="deadline" name="deadline" required value="<%=job.deadline%>" >
          </div>
          <div class="mb-3 ">
              <label for="type" class="form-label">Job-Type </label>
              <input type="text" class="form-control" id="type" name="type" required value="<%=job.type%>">
          </div>
            <div class="mb-3">
                <input class="btn btn-warning" type="submit" value="update a job">
            </div>        
          </form>
      </div>
   </div>
<%- include('./partials/footer.ejs') %>