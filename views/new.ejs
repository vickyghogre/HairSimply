<%- include('./partials/header.ejs') %>
    <div class="row">
        <div class="col-6 m-auto ">
         <h1>this is the new job</h1>
            <form class="w-50%" action="/jobs" method="post">
                <div class="mb-3">
                    <label for="name" class="form-label">Enter Company Name</label>
                    <input type="text" class="form-control" id="name" name="name" required >
                </div>
                <div class="mb-3 ">
                    <label for="address" class="form-label">Enter Company Address</label>
                    <input type="text" class="form-control" id="address" name="address" required >
                </div>
                <div class="mb-3 ">
                    <label for="image" class="form-label">Add Company logo </label>
                    <input type="text" class="form-control" id="image" name="image" required >
                </div>
                <div class="mb-3 ">
                    <label for="package" class="form-label">Job-Stipend</label>
                    <input type="string" class="form-control" id="package" name="package" required >
                </div>
                <div class="mb-3 ">
                    <label for="description" class="form-label">Description</label>
                    <input type="string" class="form-control" id="description" name="description" required >
                </div>
                <div class="mb-3 ">
                    <label for="cgpa" class="form-label">Enter CGPA </label>
                    <input type="number" class="form-control" id="cgpa" name="cgpa" required  minlength="0" maxlength="10" step="0.01">
                </div>
                <div class="mb-3 ">
                    <label for="deadline" class="form-label">Job-Deadline </label>
                    <input type="date" class="form-control" id="deadline" name="deadline" required >
                </div>
                <div class="mb-3 ">
                    <label for="type" class="form-label">Job-Type </label>
                    <input type="text" class="form-control" id="type" name="type" required >
                </div>
                <div class="mb-3">
                    <input class="btn btn-success" type="submit" value="add a new job">
                </div>
            </form>
        </div>
    </div>
<%- include('./partials/footer.ejs') %>